<!DOCTYPE html>  
<html>  
<head>  
  <title>Death BY A Thound Cuts</title>  
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>  
</head>  
<body> 

<div class="navbar navbar-inverse navbar-fixed-top" style="min-width: 695px;" >
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse" style ="float: left;" >
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
     
          <%= link_to 'Death By a Thousand  Cuts', root_path, :class => "brand" %>

          <div class="container nav-collapse">
            <ul class="nav pull-right">
              <% if current_user %>  
                <li>
                  <%= link_to('#') do %>
                    <i class="icon-user icon-white"></i>&nbsp;<%="Welcome " + current_user.Name%>
                  <%end%>
                </li>
                <li>
                  <% if can? :new, User %>
                  <%= link_to "Sign up", sign_up_path %>
                  <% end %>
                </li>
                <li>
                  <%= link_to(log_out_path) do %>
                    <i class="icon-off icon-white"></i>&nbsp;Logout
                  <%end%>
                </li>
              <%else%>
              <li>
               <%= link_to "Log in", log_in_path %>
              </li>
              <% end -%>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% flash.each do |name, msg| %>  
  <div class="alert alert-info" style="text-align: center;">
    <a class="close" href="#">Ã—</a>
    <%= content_tag :div, msg, :id => "flash#{name}" %>
  </div>
      
  <% end %>  
 <div class="container-fluid container-root"> 
	<%= yield %>  
</div>
  
</body>  
</html>  